# FitSync Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# APP CONFIGURATION
# =============================================================================
APP_NAME=FitSync API
VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://fitsync_user:fitsync_password@localhost:5432/fitsync_db

# Redis URL for caching
REDIS_URL=redis://localhost:6379

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# JWT Configuration
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# =============================================================================
# ML MODEL CONFIGURATION
# =============================================================================
# Model cache directory
MODEL_CACHE_DIR=./models

# GPU Configuration
ENABLE_GPU=false
GPU_DEVICE=cuda:0

# Model paths (relative to MODEL_CACHE_DIR)
CLOTHING_DETECTION_MODEL=yolov8n.pt
POSE_ESTIMATION_MODEL=pose_estimation.pt
STYLE_CLASSIFICATION_MODEL=style_classifier.pt
VIRTUAL_TRYON_MODEL=tryon_model.pt

# =============================================================================
# CLOUD STORAGE CONFIGURATION
# =============================================================================
# AWS S3 Configuration (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=fitsync-storage

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================
CHROMA_PERSIST_DIRECTORY=./chroma_db
FAISS_INDEX_PATH=./faiss_index

# =============================================================================
# API CONFIGURATION
# =============================================================================
# CORS Origins (comma-separated for multiple origins)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:3001"]

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# File upload configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIRECTORY=./uploads

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# Sentry DSN for error tracking (optional)
SENTRY_DSN=your-sentry-dsn-here

# Prometheus metrics
PROMETHEUS_ENABLED=true

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================
# Weather API (optional)
WEATHER_API_KEY=your-weather-api-key

# OpenAI API for advanced features (optional)
OPENAI_API_KEY=your-openai-api-key

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
CACHE_TTL=3600  # 1 hour in seconds
RECOMMENDATION_CACHE_TTL=1800  # 30 minutes in seconds

# =============================================================================
# SOCIAL FEATURES
# =============================================================================
ENABLE_LOCATION_SERVICES=true
MAX_NEARBY_DISTANCE=50.0  # kilometers

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
BATCH_SIZE=32
MAX_CONCURRENT_REQUESTS=10

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Set to true for development, false for production
DEBUG=true

# Auto-reload on code changes (development only)
AUTO_RELOAD=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
# Test database URL (for running tests)
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/fitsync_test_db

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Production settings (set ENVIRONMENT=production)
# DEBUG=false
# WORKERS=4
# LOG_LEVEL=WARNING
# CORS_ORIGINS=["https://yourdomain.com", "https://app.yourdomain.com"]

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit the actual .env file to version control
# 2. Use strong, unique passwords for database and secret keys
# 3. In production, use environment variables instead of .env file
# 4. Regularly rotate API keys and secrets
# 5. Use HTTPS in production and configure proper CORS origins
